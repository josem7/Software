<p id="notice"><%= notice %></p>

<h1>Campus</h1>

<table class="table table-hover">
  <thead style="color:white; background-color:black";>
    <tr>
      <th>Nombre</th>
      <th>Ubicacion</th>
      <th>Mapa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campus.each do |campu| %>
      <tr>
        <td><%= campu.nombre %></td>
        <td><%= campu.ubicacion %></td>
        <td><%= content_tag(:iframe,'', width: 300, height: 200, src: campu.mapa) %></td>
        <td><%= link_to'Show', campu %></td>
        <% if Admin.exists?(uid: current_user.id) %>
          <td><%= link_to 'Edit', edit_campu_path(campu)%></td>
          <td><%= link_to 'Destroy', campu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if Admin.exists?(uid: current_user.id) %>
  <%= link_to 'Crear Campu', new_campu_path %>
<% end %>
